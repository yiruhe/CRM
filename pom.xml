    <!-- slf4j 接口-->
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>1.7.12</version>
    </dependency>


    <dependency>
      <groupId>org.slf4j</groupId>
